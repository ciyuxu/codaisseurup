
<%= form_for @event, html: { multipart: true } do |f| %>
  <div class="form-group">


  <label>Main Info</label>

  <div class="form-group">
    <label>Event Name</label>
    <%= f.text_field :name, placeholder: "Put in your event's name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Event Location</label>
    <%= f.text_area :location, rows: 1, placeholder: "Put in your event's location", class: "form-control" %>
  </div>


  <label>Event description</label>

  <div class="form-group">
    <%= f.text_area :description, rows: 16, placeholder: "Say something about your event", class: "form-control" %>
  </div>


  <label>Time</label>

  <div class="form-group">
    <label>Start from</label>
    <%= f.text_field :starts_at, placeholder: "dd/mm/yyyy 00:00", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>ends_at</label>
    <%= f.text_field :ends_at, placeholder: "dd/mm/yyyy 00:00", class: "form-control" %>
  </div>


  <label>Other Info</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>

  <div class="form-group">
      <label>Nightly Price</label>
      <div class="input-group">
        <div class="input-group-addon">â‚¬</div>
        <%= f.number_field :price, placeholder: "eg. 20", class: "form-control" %>
      </div>
    </div>








  <label>Categories</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>

<% end %>


<label>Photos</label>

<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
</div>
<div id="photos">
  <%= render 'photos/list' %>
</div>



  <label>Publish this event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>




  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
