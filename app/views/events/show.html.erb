<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">


    <h4>Host: <%= @event.user.email %></h4>
    <br>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Event Name: <%= @event.name %></p>
    <p>Event Location: <%= @event.location %></p>

    <!-- Description -->
    <h4>Description</h4>
    <p><%= @event.description %></p>

    <!-- Time -->
    <h4>Time</h4>
    <ul class="Time">
      <p>Start time: <%= @event.starts_at %></p>
      <p>End time: <%= @event.ends_at %></p>
    </ul>

    <!-- Other Info -->
    <h4>Other Info</h4>
    <ul class="Other Info">
      <p>Capacity: <%= @event.capacity %> persons</p>
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drink</del>").html_safe : "Drink" %></li>
       <p>Price: <%= @event.price %></p>

    </ul>

    <h4>categories</h4>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>
    </div>


    <h4>Photos</h4>
      <% @event.photos.each do |photo| %>
        <%= image_tag photo.image %>
      <% end %>
  </div>




<%= link_to "Back", events_path, class: "btn btn-default" %>
